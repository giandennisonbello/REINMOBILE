<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AcceptedPage"
    android:background="@drawable/loginbackground">

    <android.support.v7.widget.CardView
        android:id="@+id/CV"
        android:layout_width="317dp"
        android:layout_height="334dp"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="15dp"
        app:layout_columnWeight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.487"
        app:layout_rowWeight="1">

        <view
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/regbg"
            android:textColor="@color/regbg">

        </view>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:text="We found you an assistant!"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="163dp"
            android:layout_height="163dp"
            android:layout_gravity="center"
            android:layout_marginTop="-25dp"
            app:srcCompat="@drawable/truckcircle" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="MotorTrust Towing Services"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginTop="90dp"/>

        <TextView
            android:id="@+id/txtETA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="ETA: 15 mins"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginTop="120dp"/>




    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>
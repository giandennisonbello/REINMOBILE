<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registration"
    android:background="@color/regbg">

    <TextView
        android:id="@+id/bgrnd"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/RegText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:text="REGISTRATION"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/bgrnd"
        app:layout_constraintEnd_toEndOf="@+id/bgrnd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bgrnd" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="475dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:isScrollContainer="false">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtUserInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/ic_person_outline_black_24dp"
                android:text="User Information"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtFN"
                android:layout_width="314dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:drawableLeft="@drawable/ic_person_outline_black_24dp"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_person_outline_black_24dp"
                android:ems="10"
                android:hint="  First Name"
                android:inputType="textPersonName"
                android:padding="6dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="#504e4e"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/txtLN"
                android:layout_width="314dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:background="@color/white"
                android:drawableLeft="@drawable/ic_person_outline_black_24dp"
                android:drawableStart="@drawable/ic_person_outline_black_24dp"
                android:ems="10"
                android:hint="  Last Name"
                android:inputType="textPersonName"
                android:padding="6dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="#504e4e"
                android:textSize="15sp" />


            <EditText
                android:id="@+id/txtPhone"
                android:layout_width="314dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:background="@color/white"
                android:drawableLeft="@drawable/ic_local_phone_black_24dp"
                android:ems="10"
                android:hint="  Phone Number"
                android:inputType="phone"
                android:padding="6dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="#504e4e"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/txtBirthday"
                android:layout_width="314dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:background="@color/white"
                android:drawableLeft="@drawable/ic_cake_black_24dp"
                android:ems="10"
                android:hint="  Birthday"
                android:inputType="datetime|date"
                android:padding="6dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="#504e4e"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/txtAddress"
                android:layout_width="313dp"
                android:layout_height="58dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:background="@color/white"
                android:drawableLeft="@drawable/ic_add_location_black_24dp"
                android:ems="10"
                android:hint="  Address"
                android:inputType="text|textMultiLine"
                android:padding="6dp"
                android:textColor="@color/black"
                android:textColorHint="#504e4e"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Spinner
                    android:id="@+id/CitySpinner"
                    android:layout_width="155dp"
                    android:layout_height="34dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="left"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="12dp"
                    android:background="@color/white"
                    android:padding="6dp"
                    android:prompt="@string/city_prompt"
                    android:spinnerMode="dialog" />

                <EditText
                    android:id="@+id/txtZip"
                    android:layout_width="145dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="right"
                    android:layout_marginRight="22dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="12dp"
                    android:background="@color/white"
                    android:drawableLeft="@drawable/ic_add_location_black_24dp"
                    android:ems="10"
                    android:hint="  Zip Code"
                    android:inputType="phone"
                    android:padding="6dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="#504e4e"
                    android:textSize="15sp" />

            </RelativeLayout>


            <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_person_outline_black_24dp"
            android:text="User Profile"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/progressBar5" />

            <EditText
                android:id="@+id/txtEmailAdd"
                android:layout_width="314dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:background="@color/white"
                android:drawableLeft="@drawable/ic_person_outline_black_24dp"
                android:drawableStart="@drawable/ic_person_outline_black_24dp"
                android:layout_gravity="center"
                android:ems="10"
                android:hint="  Email Address"
                android:inputType="textEmailAddress"
                android:padding="6dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="#504e4e"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView8" />

            <EditText
                android:id="@+id/txtPass"
                android:layout_width="314dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:background="@color/white"
                android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
                android:layout_gravity="center"
                android:ems="10"
                android:hint="  Password"
                android:inputType="textPassword"
                android:padding="6dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="#504e4e"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtPlateNo" />

            <EditText
                android:id="@+id/txtRepPass"
                android:layout_width="314dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:background="@color/white"
                android:drawableStart="@drawable/ic_lock_outline_black_24dp"
                android:layout_gravity="center"
                android:ems="10"
                android:hint="  Repeat Password"
                android:inputType="textPassword"
                android:padding="6dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="#504e4e"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtLN" />


            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/ic_directions_car_black_24dp"
                android:text="Vehicle Information"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtPlateNo"
                android:layout_width="314dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:background="@color/white"
                android:drawableLeft="@drawable/ic_directions_car_black_24dp"
                android:layout_gravity="center"
                android:ems="10"
                android:hint="   Plate No."
                android:inputType="text"
                android:padding="6dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="#504e4e"
                android:textSize="15sp" />

            <Spinner
                android:id="@+id/CarSpinner"
                android:layout_width="314dp"
                android:layout_height="34dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:background="@color/white"
                android:padding="6dp"
                android:prompt="@string/carType_prompt"
                android:spinnerMode="dialog" />

            <EditText
                android:id="@+id/txtColor"
                android:layout_width="314dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:background="@color/white"
                android:drawableLeft="@drawable/ic_color_lens_black_24dp"
                android:layout_gravity="center"
                android:ems="10"
                android:hint="  Color"
                android:inputType="text"
                android:padding="6dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="#504e4e"
                android:textSize="15sp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/txtModel"
                    android:layout_width="155dp"
                    android:layout_height="34dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="left"
                    android:ems="10"
                    android:drawableLeft="@drawable/ic_directions_car_black_24dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="12dp"
                    android:background="@color/white"
                    android:hint="  Model"
                    android:padding="6dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="#504e4e"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/txtYrModel"
                    android:layout_width="145dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="right"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="22dp"
                    android:layout_marginTop="12dp"
                    android:background="@color/white"
                    android:drawableLeft="@drawable/ic_directions_car_black_24dp"
                    android:ems="10"
                    android:hint="Year Model"
                    android:inputType="phone"
                    android:padding="6dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="#504e4e"
                    android:textSize="15sp" />

            </RelativeLayout>

            <EditText
                android:id="@+id/txtBrand"
                android:layout_width="314dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:background="@color/white"
                android:drawableLeft="@drawable/ic_directions_car_black_24dp"
                android:drawableStart="@drawable/ic_directions_car_black_24dp"
                android:layout_gravity="center"
                android:ems="10"
                android:hint="  Brand"
                android:inputType="text"
                android:padding="6dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="#504e4e"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtColor" />



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp">

                <EditText
                    android:id="@+id/txtBatBrand"
                    android:layout_width="155dp"
                    android:layout_height="34dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="left"
                    android:ems="10"
                    android:drawableLeft="@drawable/ic_battery_90_black_24dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="12dp"
                    android:background="@color/white"
                    android:hint="  Battery Brand"
                    android:padding="6dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="#504e4e"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/txtTireBrand"
                    android:layout_width="145dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="right"
                    android:layout_marginRight="22dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="12dp"
                    android:background="@color/white"
                    android:drawableLeft="@drawable/tire"
                    android:ems="10"
                    android:hint="  Tire Brand"
                    android:inputType="text"
                    android:padding="6dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="#504e4e"
                    android:textSize="15sp" />

            </RelativeLayout>

            <Button
                android:id="@+id/btnToHomepage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/black"
                android:text="REGISTER"
                android:textColor="@color/white"
               />

        </android.support.v7.widget.LinearLayoutCompat>

    </ScrollView>


</android.widget.RelativeLayout>